<section id="products" class="section bg-white">
  <div class="container mx-auto">
    <div class="text-center mb-12" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-bold text-primary mb-4 font-serif">Menu Kami</h2>
      <p class="text-gray-700 max-w-2xl mx-auto">
        Kami menyediakan pelbagai pilihan kek, roti dan kuih tradisional yang dibuat dengan bahan-bahan berkualiti. Semua produk kami dibuat segar tanpa pengawet.
      </p>
      <div class="mt-4 text-accent">
        <p class="font-medium italic">* Pesanan perlu dibuat 2 hari sebelumnya *</p>
      </div>
    </div>
    
    <div class="space-y-12">
      {products.map((category, index) => (
        <div data-aos="fade-up" data-aos-delay={index * 100}>
          <h3 class="text-2xl font-semibold text-primary mb-6 border-b-2 border-secondary pb-2 font-serif">{category.category}</h3>
          
          <div class="grid md:grid-cols-3 gap-6">
            {category.items.map((item) => (
              <div class="bg-cream rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow">
                <div class="h-48 overflow-hidden">
                  <img 
                    src={item.image} 
                    alt={item.name} 
                    class="w-full h-full object-cover transform hover:scale-105 transition-transform duration-500"
                  />
                </div>
                <div class="p-4">
                  <h4 class="text-xl font-semibold text-primary mb-2">{item.name}</h4>
                  <p class="text-gray-700 text-sm">{item.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <a href="#order" class="btn btn-primary">Pesan Sekarang</a>
    </div>
  </div>
</section>